<!--搜索-->
<view class="search">
    <view class="search-font">已驻入资源:</view>
    <view class="num">8</view>
    <view class="num">5</view>
    <view class="num">4</view>
    <view class="num">1</view>
    <view class="img-search">
    <image class="img-size" src="/image/search.png"></image>
    </view>
</view>
<!--轮播图-->
<swiper class="swiper__container"  indicator-dots="{{ false }}" autoplay="true" interval="3000">
      <swiper-item  wx:key="id">
            <view class="swiper__content">
                <image src="http://img2.imgtn.bdimg.com/it/u=2335862085,307954931&fm=21&gp=0.jpg" class="swiper__item" mode="aspectFill"  />
                <view class="swiper__desc">
                    <text class="swiper__text">科比</text>
                    <text class="swiper__id">[1/4]</text>
                </view>
            </view>
      </swiper-item>
</swiper>


<!--tab按钮-->
<view class="top-tab flex-wrp flex-tab " >
  <view class="toptab flex-item {{currentNavtab==idx ? 'active' : ''}}" wx:for="{{navTab}}" wx:for-index="idx" wx:for-item="itemName" data-idx="{{idx}}" bindtap="switchTab">
    {{itemName}}
  </view>
</view>


<!--全部，筛选按钮-->
<view class="flex-wrp vi-screnk">
  <view id="0" class="screenk {{currentShai==0? 'active' : ''}}" bindtap="switchSha">
    全部
  </view>
  <view id="1" class="screenk {{currentShai==1? 'active' : ''}}" bindtap="switchSha">
    筛选
  </view>
</view>

