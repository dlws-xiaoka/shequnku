/* pages/dataone/dataone.wxss */

view,text,image{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "微软雅黑";
}
.top{
  width: 100%;
  height: 20rpx;
  border-bottom: 1px solid #e6e6e6;
  background: #f2f2f2;
}
.content_wrapper{
  width: 100%;
  height: 100vh;
  background:#f7f7f7;
}
.content{
  width: 95.3125vw;
  overflow:hidden;
  clear:both;
  margin: 0 auto;
  background:#fff;
}
.content_detail{
  width: 100vw;
  overflow:hidden;
  clear:both;
  font-size:4.0625vw;
 border-bottom: 1px solid #e6e6e6;
}
.content_name1,.content_name2,.content_pic,.content_nameCity,.content_nameJ,.content_nameP,.content_nameT{
  float: left;
}
.content_name1{
   color:#333;
   margin: 15px 0;
   font-weight: 600;
}
.content_name2{
  text-align:right;
  color:#999;
  margin: 15px 0 15px 24.2666%;
  
}
@media only screen and (min-width: 414px) and (max-width: 640px) {
	.content_name2{
  margin: 15px 0 15px 28.4666%;
 
}
}
.content_nameCity{
  color:#999;
  margin: 15px 0 15px 45.28125%;
}
.content_nameP{
  color:#999;
  margin: 15px 0 15px 49.09375%;
}
.content_nameT{
  color:#999;
  margin: 15px 0 15px 48.625%;
}
.content_nameJ{
  width: 45.5vw;
  color:#999;
  margin: 15px 0 15px 33.625%;
}
.content_pic{
  width: 3.875vw;
  height: 3.4375vw;
  margin: 15px 15px 15px 10px;
}
.photo{
  width: 100%;
  height: 100%;
  background-size: cover;
}
.foot_button{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100vw;
  font-size: 5.625vw;
  text-align: center;
  background: #13b1a3;
  color: #fff;

}
/** 修改button默认的点击态样式类**/
.button-hover {
  background-color: red;
}