/* pages/wordinfo/wordinfo.wxss */
page {
height:100%;
width:100%;
}
.infolist{    
  height: 100%;
  width: 100%;
  flex-direction: column;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;

}
.scrollwechat {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  height: 100%;
}
.wordslist{
    height: 100%;
}
.wordsubmit{
    height: 30rpx;
    bottom: 0px;
}
.article_txt{
    border-bottom: 1rpx solid #eee;
    
}

.article__item{
  display: flex;
  padding: 20rpx 30rpx 0 30rpx;
  align-items: center;
  position: relative;
  
}
.article__thumb{
  width:2.2rem;
  height: 2rem;

}
.article__image{
  width:2.2rem;
  height: 2rem;
}
.article__info{
  flex: 1;
  width: 100%;
  overflow: hidden;
}
.article__desc{
  font-size: 30rpx;
  line-height: 1.2rem;
  width: 100%;
}
.article__source{
  color:#d81e06; 
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  font-size:20rpx;
  margin-right: 20rpx;
}

.article__title{
  margin-left: 10rpx;
}
.article__time{
  float: right;
  display: flex;
  align-items: center;
  font-size: 25rpx;
  font-weight: 500;
}
.a_con{
    margin-left:30rpx;
    margin-right:20rpx; 
}



.footer {
  width: 96%;
  height: 100rpx;
  padding: 2%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
  background: #efeff4;

}

.footinput {
  flex: 1;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input {
  width: 100%;
  height: 60rpx;
  padding: 10rpx 4rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
}
.foodsend {
  width: 100rpx;
  height: 80rpx;
  display: flex;
  margin: 10rpx;
   background: #17af0f;
   border-radius: 10rpx;
  justify-content: center;
  align-items: center;
}
.send{
  font-size: 14px;
  color: #fff;
}
.footadd {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.addbroder {
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 100rpx;
}

.footadd image {
  width: 50rpx;
  height: 50rpx;
}
.footaddbox{
  height: 200rpx;
  
}
.footaddbox ul{
  display: flex;
  height: 100%;
  flex-direction: row;
 
}
.footaddbox ul li{
  flex: 1;
  height: 100%;
  font-size: 12px;
  color: #9a9a9a;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.footaddimg{
  border: 1px solid #ccc;
  border-radius: 20rpx;
  margin: 10rpx;
  padding: 30rpx;
}
.footaddtext{
  border: 1px solid #ccc;
  border-radius: 20rpx;
  margin: 10rpx;
  padding: 30rpx;
}
.footaddbox ul li image{
  width: 60rpx;
  height: 60rpx;
}
.tellinput{
  height: 50rpx;
  line-height: 50rpx;
  border: 1px solid #efeff4;
}