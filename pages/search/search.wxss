.search_top{
	width: 100%;
	min-height: 45px;
	overflow: hidden;
    clear: both;

	border-bottom: 1px solid #ccc;
    background:#13b1a3;
}

.search_container{
	width: 82.8125vw;
	overflow: hidden;
    clear: both;
    background: #fff;
	margin-left: 10px;
	margin-bottom:7px ;
	margin-top: 7px;
    border: 1px solid #fff;
    border-radius: 5px;
    float: left;
}
.inp{
	display: block;
    width: 78.4375vw;
    height: auto;
    padding: 7px 0;
    border: 0;
    font-size: 3.75vw;
    float: right;
    text-indent: 2px;
}
.search_content{
	width: 4.375vw;
    height: 4.375vw;
	margin-bottom:7px ;
    margin-top: 8px;
	float: left;
}
.search_img{
    width: 100%;
    height: 100%;
    background-size: cover;
}
.cancel{
    float: right;
    font-size: 4.0375vw;
    margin: 15px 10px 0 0;
    color: #fff;
}
